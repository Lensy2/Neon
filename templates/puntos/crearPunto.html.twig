{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            <small>Punto nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">Nuevo</li>
        </ol>
    </section>
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_digitoVerificacion" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_nombreCorto" class="col-sm-2 control-label">Dirección</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.direccion, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_direccion" class="col-sm-2 control-label">Telefono</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="">Cancelar</a>
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}