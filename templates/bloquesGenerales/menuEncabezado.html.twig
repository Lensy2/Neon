<div class="topbar">
    <div class="topbar-left">
        <a href="#" class="logo">
                <span>
                    <img src="{{ asset('local/assets/images/logo.png') }}" alt="" height="50">
                </span>
            <i>
                <img src="{{ asset('local/assets/images/logo_sm.png') }}" alt="" height="35">
            </i>
        </a>
    </div>
    <div class="navbar navbar-default" role="navigation">
        <div class="container">
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <button class="button-menu-mobile open-left waves-effect">
                        <i class="mdi mdi-menu"></i>
                    </button>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown user-box">
                    <a href="#" class="dropdown-toggle waves-effect user-link" data-toggle="dropdown" aria-expanded="true">
                        <img src="{{ asset('local/assets/images/logo_sm.png') }}" alt="user-img" class="img-circle user-img">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right arrow-dropdown-menu arrow-menu-right user-list notify-list">
                        <li>
                            <h5>Usuario:
                                {% if app.user is defined or app.user is not null %}
                                    {{ app.user.nombres }}
                                {% endif %}
                            </h5>
                        </li>
                        <li>
                            {% if app.user %}
                                <a href="{{ logout_path('main') }}"><i class="ti-power-off m-r-5"></i> Salir</a>
                            {% else %}
                                <a href="{{ path('acceso') }}"><i class="ti-power-off m-r-5"></i> Ingresar</a>
                            {% endif %}
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
