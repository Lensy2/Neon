{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <h4 class="page-title">Clientes</h4>
                <ol class="breadcrumb float-right">
                    <li class="breadcrumb-item"><a href="#">Minton</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
<div class="panel panel-default">
    <div class="panel-heading">Informacion general</div>
    <div class="panel-body">
        <div class="form-group form-group-sm">
    <section class="content-header">
        <ol class="breadcrumb">
            <li class="active">Nuevo</li>
        </ol>
    </section>
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_nit" class="col-sm-2 control-label">Nit</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nit, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_digitoVerificacion" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_nombreCorto" class="col-sm-2 control-label">Teléfono</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_direccion" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="">Cancelar</a>
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
        </div>
    </div>
</div>
{% endblock %}


