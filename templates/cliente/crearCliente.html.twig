{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            <small>Cliente: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">Nuevo</li>
        </ol>
    </section>
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_nit" class="col-sm-2 control-label">Nit:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nit, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_digitoVerificacion" class="col-sm-2 control-label">Digito verificacion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.digitoVerificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_nombreCorto" class="col-sm-2 control-label">Nombre corto:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_direccion" class="col-sm-2 control-label">Direccion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.direccion, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_ciudadRel" class="col-sm-2 control-label">Ciudad:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_telefono" class="col-sm-2 control-label">Telefono:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_celular" class="col-sm-2 control-label">Celular:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.celular, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_email" class="col-sm-2 control-label">Email:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="">Cancelar</a>
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}