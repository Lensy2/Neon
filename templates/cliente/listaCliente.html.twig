{% extends 'base.html.twig' %}
{% block bodyAtt %}class="fixed-left"{% endblock %}
{% block body %}
    <div id="wrapper">
        {{ include('bloquesGenerales/menuEncabezado.html.twig') }}
        {{ include('bloquesGenerales/menuIzquierdo.html.twig') }}
        <div class="content-page">
            <div class="content">
                <div class="container">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="page-title-box">
                                    <a href="{{ path('registrarCliente') }}">
                                        <button class="btn btn-success btn-bordered waves-effect waves-light" style="float: right;"><span class="mdi mdi-plus"></span> Nuevo</button>
                                    </a>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card-box">
                                    <h4 class="header-title m-t-0 m-b-30"> Listado de clientes</h4>
                                    <div class="table-responsive">
                                        <table class="table table table-hover m-0">
                                            <thead>
                                            <tr>
                                                <th>Nit</th>
                                                <th>Raz√≥n social</th>
                                                <th>Nombre comercial</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for cliente in clientes %}
                                                <tr>
                                                    <td>
                                                        {{ cliente.nit }}
                                                    </td>
                                                    <td>
                                                        {{ cliente.razonSocial }}
                                                    </td>
                                                    <td>{{ cliente.nombreComercial}}</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock content %}
                </div>
            </div>
        </div>
        {{ include('bloquesGenerales/pie.html.twig') }}
    </div>
{% endblock %}